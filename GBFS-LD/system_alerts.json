{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://github.com/NABSA/gbfs/blob/v1.0/gbfs.md#system_alertsjson",
    "description": 	"Describes ad-hoc changes to the system.",
    "type": "object",
    "properties": {
      "last_updated": {
        "ld.id": "http://purl.org/dc/terms/modified",
        "ld.existing": true,
        "description": 	"Last time the data in the feed was updated in POSIX time.",
        "type": "integer",
        "minimum": 0,
        "maximum": 1924988399
      },
      "ttl": {
        "description": "Number of seconds before the data in the feed will be updated again (0 if the data should always be refreshed).",
        "type": "integer",
        "minimum": 0
      },
      "data": {
        "ld.included": true,
        "description": "Array that contains ad-hoc alerts for the system.",
        "type": "object",
        "properties": {
          "alerts": {
            "ld.class": {
              "ld.id": "https://w3id.org/gbfs#Alert",
              "ld.description": "Ad-hoc alert for the system."
            },
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "alert_id": {
                  "description": 	"Identifier for this alert.",
                  "type": "string"
                },
                "type": {
                  "ld.id": "https://w3id.org/gbfs#alert_type",
                  "description": 	"Type of alert.",
                  "type": "string",
                  "enum": [
                    "SYSTEM_CLOSURE",
                    "STATION_CLOSURE",
                    "STATION_MOVE",
                    "OTHER"
                  ]
                },
                "times": {
                  "ld.association": {
                    "ld.id": "https://w3id.org/gbfs#AlertTime",
                    "ld.description": "Alert that is in effect"
                  },
                  "description": "Array of objects indicating when the alert is in effect.",
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "start": {
                        "ld.id": "https://w3id.org/gbfs#alert_start",
                        "type": "number",
                        "minimum": 0
                      },
                      "end": {
                        "ld.id": "https://w3id.org/gbfs#alert_end",
                        "type": "number",
                        "minimum": 0
                      }
                    }
                  },
                  "additionalItems": false,
                  "required": ["start"]
                },
                "station_ids": {
                  "description": "Array of identifiers of the stations for which this alert applies.",
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "region_ids": {
                  "description": "Array of identifiers of the regions for which this alert applies.",
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "url": {
                  "description": "URL where the customer can learn more information about this alert.",
                  "type": "string"
                },
                "summary": {
                  "description": "A short summary of this â€¦played to the customer.",
                  "type": "string"
                },
                "description": {
                  "description": "Detailed description of the alert.",
                  "type": "string"
                },
                "last_updated": {
                  "description": "Indicates the last time the info for the alert was updated.",
                  "type": "integer",
                  "minimum": 0,
                  "maximum": 1924988399
                }
              },
              "required": ["alert_id", "type", "summary"]
            }
          }
        },
        "required": ["alerts"]
      }
    },
    "required": ["last_updated", "ttl", "data"]
  }
