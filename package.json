{
  "name": "jsc-ld",
  "version": "1.0.0",
  "description": "JSON Schema LD is a syntactic sugar for JSON Schema to enable generative interoperability by means of representing JSON schema in RDF vocabularies (RDF Scheme) and RDF shapes in SHACL.",
  "main": "./dist/lib/JSONSchemaParser.js",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "build:example": "tsc -p src/example",
    "test": "jest --ci --coverage && tsc --noemit",
    "watch-test": "jest --watch",
    "prebuild-release": "npm run clean"
  },
  "jest": {
    "transform": {
      "transform_regex": ["ts-jest", { "tsconfig": "./tsconfig.json" }],
      "^.+\\.ts$": "<rootDir>/node_modules/ts-jest"
    },
    "testRegex": "(/tests/.*|(\\\\.|/)(test|spec))-test.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/mocks/",
      "index.js"
    ],
    "testEnvironment": "node"
  },
  "keywords": [
    "JSON schema",
    "JSON",
    "JSC",
    "JSC-LD",
    "Linked data",
    "RDF",
    "RDFS",
    "Shacl"
  ],
  "author": "Jiao Long",
  "license": "ISC",
  "dependencies": {
    "@hyperjump/json-schema-core": "^0.23.7",
    "@types/node": "^17.0.31",
    "command-line-args": "^5.2.1",
    "command-line-usage": "^6.1.3",
    "componentsjs": "^5.1.0",
    "n3": "^1.16.2",
    "node-fetch": "^2.6.1",
    "path-type": "^5.0.0",
    "typescript": "^4.6.4"
  },
  "devDependencies": {
    "@types/jest": "^29.0.3",
    "@types/node-fetch": "^2.6.1",
    "@types/rdf-js": "^4.0.2",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "eslint": "^8.24.0",
    "jest": "^29.1.0",
    "jest-rdf": "^1.7.0",
    "ts-jest": "^29.0.2"
  }
}
